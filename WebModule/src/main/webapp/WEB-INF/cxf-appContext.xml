<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	                        http://www.springframework.org/schema/beans/spring-beans.xsd
                            http://cxf.apache.org/jaxrs
                            http://cxf.apache.org/schemas/jaxrs.xsd">

    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <!-- Exception mapper -->
    <!--<bean id="exceptionMapper" class="ServerExceptionMapper"/>-->
    <jaxrs:server address="/"
                  basePackages=
                          "com.km2labs.expenseview.rest.resources.expensebook,
                   com.km2labs.expenseview.rest.resources.member,
                   com.km2labs.expenseview.rest.resources.category,
                   com.km2labs.expenseview.rest.resources.expensebook,
                   com.km2labs.expenseview.rest.resources.user,
                   com.km2labs.expenseview.rest.providers,
                   com.km2labs.expenseview.rest.bindings,
                   com.km2labs.expenseview.rest.markers">
        <jaxrs:providers>
            <ref bean="jsonProvider"/>
        </jaxrs:providers>
    </jaxrs:server>


    <!-- JSON mapper -->
    <bean id="jsonProvider" class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider"/>

</beans>
